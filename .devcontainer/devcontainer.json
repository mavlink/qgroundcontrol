{
  "build": {
    "context": "..",
    "dockerfile": "../deploy/docker/Dockerfile-build-ubuntu"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "QML.qml-official",
        "ms-python.python",
        "GitHub.copilot"
      ],
      "settings": {
        "clangd.arguments": [
          "--background-index",
          "--clang-tidy",
          "--header-insertion=iwyu",
          "--completion-style=detailed"
        ],
        "cmake.buildDirectory": "${workspaceFolder}/build",
        "cmake.configureOnOpen": true,
        "cmake.generator": "Ninja",
        "editor.formatOnSave": true,
        "files.associations": {
          "*.qml": "qml"
        }
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "name": "QGroundControl Dev",
  "postCreateCommand": "git submodule update --init --recursive",
  "remoteUser": "root",
  "workspaceFolder": "/workspaces/qgroundcontrol",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/qgroundcontrol,type=bind,consistency=cached"
}
