<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.mavlink.qgroundcontrol</id>

  <name>@CMAKE_PROJECT_NAME@</name>
  <summary>@CMAKE_PROJECT_DESCRIPTION@</summary>
  <developer_name>@QGC_ORG_NAME@</developer_name>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0 AND Apache-2.0</project_license>

  <recommends>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
    <control>gamepad</control>
  </recommends>

  <description>
    <p>
      @CMAKE_PROJECT_DESCRIPTION@
    </p>
  </description>

  <content_rating type="oars-1.1"/>

  <releases>
    <release date="@QGC_APP_DATE@" version="@CMAKE_PROJECT_VERSION@"/>
  </releases>

  <launchable type="desktop-id">org.mavlink.qgroundcontrol.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://docs.qgroundcontrol.com/assets/quickstart/ConnectedVehicle.jpg</image>
    </screenshot>
  </screenshots>

  <url type="homepage">@CMAKE_PROJECT_HOMEPAGE_URL@</url>
  <url type="help">https://docs.qgroundcontrol.com/master/en/index.html</url>
  <url type="bugtracker">https://github.com/mavlink/qgroundcontrol/issues</url>

  <categories>
    <category>Utility</category>
    <category>Maps</category>
  </categories>

  <provides>
    <binary>@CMAKE_PROJECT_NAME@</binary>
  </provides>
</component>
