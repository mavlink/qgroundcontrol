{
  "version": 5,
  "include": ["common.json"],
  "configurePresets": [
    {
      "name": "macos-base",
      "hidden": true,
      "generator": "Ninja",
      "inherits": ["ccache"],
      "toolchainFile": "$penv{QT_ROOT_DIR}/lib/cmake/Qt6/qt.toolchain.cmake",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64;arm64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macOS",
      "displayName": "macOS Release",
      "inherits": ["release", "macos-base"],
      "binaryDir": "${sourceParentDir}/build/macOS"
    },
    {
      "name": "macOS-debug",
      "displayName": "macOS Debug",
      "inherits": ["debug", "macos-base"],
      "binaryDir": "${sourceParentDir}/build/macOS-debug"
    }
  ],
  "buildPresets": [
    { "name": "macOS", "configurePreset": "macOS", "inherits": ["default"] },
    { "name": "macOS-debug", "configurePreset": "macOS-debug", "inherits": ["default"] }
  ],
  "testPresets": [
    { "name": "macOS", "configurePreset": "macOS", "inherits": ["default"] },
    { "name": "macOS-debug", "configurePreset": "macOS-debug", "inherits": ["default"] }
  ],
  "packagePresets": [
    { "name": "macOS", "configurePreset": "macOS" }
  ],
  "workflowPresets": [
    {
      "name": "macOS",
      "steps": [
        { "type": "configure", "name": "macOS" },
        { "type": "build", "name": "macOS" },
        { "type": "test", "name": "macOS" },
        { "type": "package", "name": "macOS" }
      ]
    },
    {
      "name": "macOS-debug",
      "steps": [
        { "type": "configure", "name": "macOS-debug" },
        { "type": "build", "name": "macOS-debug" },
        { "type": "test", "name": "macOS-debug" }
      ]
    }
  ]
}
