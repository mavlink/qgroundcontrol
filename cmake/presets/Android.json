{
  "version": 5,
  "include": ["common.json"],
  "configurePresets": [
    {
      "name": "android-base",
      "hidden": true,
      "generator": "Ninja",
      "inherits": ["ccache"],
      "toolchainFile": "$penv{QT_ROOT_DIR}/lib/cmake/Qt6/qt.toolchain.cmake",
      "cacheVariables": {
        "ANDROID_ABI": "arm64-v8a",
        "ANDROID_PLATFORM": "$penv{ANDROID_PLATFORM}",
        "ANDROID_NDK": "$penv{ANDROID_NDK}",
        "QT_HOST_PATH": "$penv{QT_HOST_PATH}"
      }
    },
    {
      "name": "Android",
      "displayName": "Android Release",
      "inherits": ["release", "android-base"],
      "binaryDir": "${sourceParentDir}/build/Android"
    },
    {
      "name": "Android-debug",
      "displayName": "Android Debug",
      "inherits": ["debug", "android-base"],
      "binaryDir": "${sourceParentDir}/build/Android-debug"
    }
  ],
  "buildPresets": [
    { "name": "Android", "configurePreset": "Android", "inherits": ["default"] },
    { "name": "Android-debug", "configurePreset": "Android-debug", "inherits": ["default"] }
  ],
  "packagePresets": [
    { "name": "Android", "configurePreset": "Android" }
  ],
  "workflowPresets": [
    {
      "name": "Android",
      "steps": [
        { "type": "configure", "name": "Android" },
        { "type": "build", "name": "Android" },
        { "type": "package", "name": "Android" }
      ]
    }
  ]
}
