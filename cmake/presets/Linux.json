{
  "version": 5,
  "include": ["common.json"],
  "configurePresets": [
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Ninja",
      "inherits": ["ccache"],
      "toolchainFile": "$penv{QT_ROOT_DIR}/lib/cmake/Qt6/qt.toolchain.cmake",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "Linux",
      "displayName": "Linux Release",
      "inherits": ["release", "linux-base"],
      "binaryDir": "${sourceParentDir}/build/Linux"
    },
    {
      "name": "Linux-debug",
      "displayName": "Linux Debug",
      "inherits": ["debug", "linux-base"],
      "binaryDir": "${sourceParentDir}/build/Linux-debug"
    },
    {
      "name": "Linux-coverage",
      "displayName": "Linux Coverage",
      "inherits": ["coverage", "linux-base"],
      "binaryDir": "${sourceParentDir}/build/Linux-coverage"
    },
    {
      "name": "Linux-arm64",
      "displayName": "Linux ARM64 Release",
      "inherits": ["release", "linux-base"],
      "binaryDir": "${sourceParentDir}/build/Linux-arm64",
      "cacheVariables": {
        "QT_HOST_PATH": "$penv{QT_HOST_PATH}"
      }
    },
    {
      "name": "Linux-arm64-debug",
      "displayName": "Linux ARM64 Debug",
      "inherits": ["debug", "linux-base"],
      "binaryDir": "${sourceParentDir}/build/Linux-arm64-debug",
      "cacheVariables": {
        "QT_HOST_PATH": "$penv{QT_HOST_PATH}"
      }
    }
  ],
  "buildPresets": [
    { "name": "Linux", "configurePreset": "Linux", "inherits": ["default"] },
    { "name": "Linux-debug", "configurePreset": "Linux-debug", "inherits": ["default"] },
    { "name": "Linux-coverage", "configurePreset": "Linux-coverage", "inherits": ["default"] },
    { "name": "Linux-arm64", "configurePreset": "Linux-arm64", "inherits": ["default"] },
    { "name": "Linux-arm64-debug", "configurePreset": "Linux-arm64-debug", "inherits": ["default"] }
  ],
  "testPresets": [
    { "name": "Linux", "configurePreset": "Linux", "inherits": ["default"] },
    { "name": "Linux-debug", "configurePreset": "Linux-debug", "inherits": ["default"] },
    { "name": "Linux-coverage", "configurePreset": "Linux-coverage", "inherits": ["default"] }
  ],
  "packagePresets": [
    { "name": "Linux", "configurePreset": "Linux" },
    { "name": "Linux-arm64", "configurePreset": "Linux-arm64" }
  ],
  "workflowPresets": [
    {
      "name": "Linux",
      "steps": [
        { "type": "configure", "name": "Linux" },
        { "type": "build", "name": "Linux" },
        { "type": "test", "name": "Linux" },
        { "type": "package", "name": "Linux" }
      ]
    },
    {
      "name": "Linux-debug",
      "steps": [
        { "type": "configure", "name": "Linux-debug" },
        { "type": "build", "name": "Linux-debug" },
        { "type": "test", "name": "Linux-debug" }
      ]
    }
  ]
}
